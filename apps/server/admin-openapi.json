            "example": "john_doe"
          },
          "email": {
            "type": "string",
            "description": "邮箱",
            "example": "john@example.com"
          },
          "isActive": {
            "type": "boolean",
            "description": "是否激活",
            "example": true
          },
          "firstName": {
            "type": "string",
            "description": "名字",
            "example": "张"
          },
          "lastName": {
            "type": "string",
            "description": "姓氏",
            "example": "三"
          },
          "attributes": {
            "type": "object",
