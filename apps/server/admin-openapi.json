  "components": {
    "securitySchemes": {
      "bearer": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http",
        "name": "Authorization",
        "description": "请输入 JWT 格式的 Token",
        "in": "header"
      }
    },
    "schemas": {
      "CreateRoleDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "角色名称",
            "example": "admin"
          },
          "description": {
            "type": "string",
            "description": "角色描述",
            "example": "系统管理员"
          },
          "permissionIds": {
            "description": "权限ID列表",
            "example": [
              "permission-uuid-1",
              "permission-uuid-2"
            ],
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "attributes": {
            "type": "object",
            "description": "角色属性",
            "example": {
              "level": "high",
              "department": "IT"
            }
          }
        },
        "required": [
          "name"
        ]
      },
      "PermissionSummaryVo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "权限ID"
          },
          "code": {
            "type": "string",
            "description": "权限编码"
          },
          "name": {
            "type": "string",
            "description": "权限名称"
          },
          "type": {
            "type": "string",
            "description": "权限类型"
          },
          "reason": {
            "type": "string",
            "description": "权限说明"
          },
          "displayName": {
            "type": "string",
            "description": "权限显示名称"
          }
        },
        "required": [
          "id",
          "code",
          "name",
          "type"
        ]
      },
      "RoleVo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "角色ID",
            "example": "uuid-string"
          },
          "name": {
            "type": "string",
            "description": "角色名称",
            "example": "admin"
          },
          "description": {
            "type": "string",
            "description": "角色描述",
            "example": "系统管理员"
          },
          "attributes": {
            "type": "object",
            "description": "角色属性",
            "example": {
              "level": "high",
              "department": "IT"
            }
          },
          "permissions": {
            "description": "权限列表",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PermissionSummaryVo"
            }
          },
          "users": {
            "description": "用户列表",
            "type": "array",
            "items": {
              "type": "array"
            }
          },
          "createdAt": {
            "type": "string",
            "description": "创建时间",
            "example": "2024-01-01T00:00:00.000Z"
          },
          "updatedAt": {
            "type": "string",
            "description": "更新时间",
            "example": "2024-01-01T00:00:00.000Z"
          },
          "createdAtLocal": {
            "type": "string",
            "description": "创建时间（本地格式）",
            "example": "2024/1/1"
          },
          "permissionCount": {
            "type": "number",
            "description": "权限数量"
          },
          "userCount": {
            "type": "number",
            "description": "用户数量"
          }
        },
        "required": [
          "id",
          "name",
          "createdAt",
          "updatedAt",
          "createdAtLocal"
        ]
      },
      "SimpleRoleVo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "角色ID"
          },
          "name": {
            "type": "string",
            "description": "角色名称"
          },
          "description": {
            "type": "string",
            "description": "角色描述"
          },
          "createdAtLocal": {
            "type": "string",
            "description": "创建时间（本地格式）",
            "example": "2024/1/1"
          },
          "permissionCount": {
            "type": "number",
            "description": "权限数量"
          },
          "userCount": {
            "type": "number",
            "description": "用户数量"
          }
        },
        "required": [
          "id",
          "name",
          "createdAtLocal"
        ]
      },
      "RoleDetailVo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "角色ID",
            "example": "uuid-string"
          },
          "name": {
            "type": "string",
            "description": "角色名称",
            "example": "admin"
          },
          "description": {
            "type": "string",
            "description": "角色描述",
            "example": "系统管理员"
          },
          "attributes": {
            "type": "object",
            "description": "角色属性",
            "example": {
              "level": "high",
              "department": "IT"
            }
          },
          "permissions": {
            "description": "权限列表",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PermissionSummaryVo"
            }
          },
          "users": {
            "description": "用户列表",
            "type": "array",
            "items": {
              "type": "array"
            }
          },
          "createdAt": {
            "type": "string",
            "description": "创建时间",
            "example": "2024-01-01T00:00:00.000Z"
          },
          "updatedAt": {
            "type": "string",
            "description": "更新时间",
            "example": "2024-01-01T00:00:00.000Z"
          },
          "createdAtLocal": {
            "type": "string",
            "description": "创建时间（本地格式）",
            "example": "2024/1/1"
          },
          "permissionCount": {
            "type": "number",
            "description": "权限数量"
          },
          "userCount": {
            "type": "number",
            "description": "用户数量"
          },
          "permissionsByType": {
            "type": "object",
            "description": "角色拥有的权限按类型分组"
          }
        },
        "required": [
          "id",
          "name",
          "createdAt",
          "updatedAt",
          "createdAtLocal"
        ]
      },
      "LoginDto": {
        "type": "object",
        "properties": {
          "usernameOrEmail": {
            "type": "string",
            "description": "用户名或邮箱",
            "example": "admin"
          },
          "password": {
            "type": "string",
            "description": "密码",
            "example": "admin123"
          }
        },
        "required": [
          "usernameOrEmail",
